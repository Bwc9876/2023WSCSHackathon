---
import { Image } from "astro:assets";
export interface Props {
  name: string;
  img?: ImageMetadata;
}

const { name, img } = Astro.props;
---

<div class="card">
  <div class="header">
    {img && <Image width="400" src={img} alt={name} />}
    <strong>{name}</strong>
  </div>
</div>

<style>
  div.card {
    display: flex;
    flex-direction: column;
    height: 100%;
    min-width: 30%;
    background-color: var(--secondary);
    padding: calc(var(--spacing) * 2);
    gap: calc(var(--spacing) * 3);
    border-radius: 5px;
  }

  div.header {
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: calc(var(--spacing) * 2);
  }

  div.header > div {
    overflow: hidden;
    width: 100%;
  }

  div.header > strong {
    font-size: larger;
  }

  img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }
</style>
